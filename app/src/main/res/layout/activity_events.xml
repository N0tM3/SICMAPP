        android:background="@drawable/form_diagonal">

    </RelativeLayout>
-->
    <View
        android:id="@+id/linea1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="150dp"
        android:background="#1E4455">

    </View>

</FrameLayout>
