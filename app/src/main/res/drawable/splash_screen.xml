<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/directoireBlue"/>


    <item android:top="-400dp"
        android:bottom="-10dp"
        android:right="30dp"
        android:left="-500dp">
        <rotate
            android:fromDegrees="30"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/trueBlue"/>
            </shape>
        </rotate>
    </item>
    <item android:top="-200dp"
        android:bottom="-10dp"
        android:right="20dp"
        android:left="-30dp">
        <rotate
            android:fromDegrees="30"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/viridianGreen"/>
            </shape>
        </rotate>
    </item>

    <item android:top="-200dp"
        android:bottom="-10dp"
        android:right="10dp"
        android:left="20dp">
        <rotate
            android:fromDegrees="30"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/greenery"/>
            </shape>
        </rotate>
    </item>
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher"/>
    </item>

</layer-list>